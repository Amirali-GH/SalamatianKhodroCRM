Unit Controller.Sale.Campaign;

Interface

Uses
    System.SysUtils,
    System.Classes,
    System.Generics.Collections,
    MVCFramework,
    MVCFramework.Commons,
    MVCFramework.ActiveRecord,
    MVCFramework.Swagger.Commons,
    MVCFramework.Nullables,
    Service.Interfaces,
    Model.Sale.Campaign,
    WebModule.SalamtCRM;

Type
    [MVCPath(BASE_API_V1 + '/campaign')]
    TSaleCampaignController = Class(TMVCController)
    Public

        [MVCPath('')]
        [MVCHTTPMethods([httpGET])]
        [MVCProduces(TMVCMediaType.APPLICATION_JSON)]
        [MVCConsumes(TMVCMediaType.APPLICATION_JSON)]
        Procedure GetAllCampaigns(Const [MVCInject] ASaleCampaignService: ICampaignService);

        [MVCPath('/($ACampaignID)')]
        [MVCHTTPMethods([httpGET])]
        [MVCProduces(TMVCMediaType.APPLICATION_JSON)]
        [MVCConsumes(TMVCMediaType.APPLICATION_JSON)]
        Procedure GetCampaignByID(Const ACampaignID: String;
          Const [MVCInject] ASaleCampaignService: ICampaignService);

        [MVCPath('')]
        [MVCHTTPMethods([httpPOST])]
        [MVCProduces(TMVCMediaType.APPLICATION_JSON)]
        [MVCConsumes(TMVCMediaType.APPLICATION_JSON)]
        Procedure CreateCampaign(Const [MVCInject] ASaleCampaignService: ICampaignService);

        [MVCPath('/($ACampaignID)')]
        [MVCHTTPMethods([httpPUT])]
        [MVCProduces(TMVCMediaType.APPLICATION_JSON)]
        [MVCConsumes(TMVCMediaType.APPLICATION_JSON)]
        Procedure UpdateCampaign(Const ACampaignID: String;
          Const [MVCInject] ASaleCampaignService: ICampaignService);

        [MVCPath('/($ACampaignID)')]
        [MVCHTTPMethods([httpDELETE])]
        [MVCProduces(TMVCMediaType.APPLICATION_JSON)]
        [MVCConsumes(TMVCMediaType.APPLICATION_JSON)]
        Procedure DeleteCampaign(Const ACampaignID: String;
          Const [MVCInject] ASaleCampaignService: ICampaignService);
    End;

