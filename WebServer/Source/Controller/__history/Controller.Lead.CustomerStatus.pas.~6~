Unit Controller.Lead.CustomerStatus;

Interface

Uses
    System.SysUtils,
    System.Classes,
    System.Generics.Collections,
    MVCFramework,
    MVCFramework.Commons,
    MVCFramework.ActiveRecord,
    MVCFramework.Nullables,
    Service.Interfaces,
    Model.Lead.CustomerStatus,
    WebModule.SalamtCRM;

Type
    [MVCPath(BASE_API_V1 + '/customer-status')]
    TCustomerStatusController = Class(TMVCController)
    Public
        [MVCPath('')]
        [MVCHTTPMethods([httpGET])]
        [MVCProduces(TMVCMediaType.APPLICATION_JSON)]
        [MVCConsumes(TMVCMediaType.APPLICATION_JSON)]
        Procedure GetAllCustomerStatuses(Const [MVCInject] ACustomerStatusService: ICustomerStatusService);

        [MVCPath('/($ACustomerStatusID)')]
        [MVCHTTPMethods([httpGET])]
        [MVCProduces(TMVCMediaType.APPLICATION_JSON)]
        [MVCConsumes(TMVCMediaType.APPLICATION_JSON)]
        Procedure GetCustomerStatusByID(Const ACustomerStatusID: String;
          Const [MVCInject] ACustomerStatusService: ICustomerStatusService);

        [MVCPath('')]
        [MVCHTTPMethods([httpPOST])]
        [MVCProduces(TMVCMediaType.APPLICATION_JSON)]
        [MVCConsumes(TMVCMediaType.APPLICATION_JSON)]
        Procedure CreateCustomerStatus(Const [MVCInject] ACustomerStatusService: ICustomerStatusService);

        [MVCPath('/($ACustomerStatusID)')]
        [MVCHTTPMethods([httpPUT])]
        [MVCProduces(TMVCMediaType.APPLICATION_JSON)]
        [MVCConsumes(TMVCMediaType.APPLICATION_JSON)]
        Procedure UpdateCustomerStatus(Const ACustomerStatusID: String;
          Const [MVCInject] ACustomerStatusService: ICustomerStatusService);

        [MVCPath('/($ACustomerStatusID)')]
        [MVCHTTPMethods([httpDELETE])]
        [MVCProduces(TMVCMediaType.APPLICATION_JSON)]
        [MVCConsumes(TMVCMediaType.APPLICATION_JSON)]
        Procedure DeleteCustomerStatus(Const ACustomerStatusID: String;
          Const [MVCInject] ACustomerStatusService: ICustomerStatusService);
    End;

