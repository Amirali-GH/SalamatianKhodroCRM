Unit Model.PotentialLevel;

Interface

Uses
    MVCFramework.Nullables,
    MVCFramework.Serializer.Commons,
    MVCFramework.ActiveRecord;

Type
    [MVCNameCase(ncCamelCase)]
    [MVCTable('potential_levels')]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TPotentialLevel = Class(TMVCActiveRecord)
    Private
        [MVCTableField('id', [foPrimaryKey, foAutoGenerated])]
        fID: Int32;

        [MVCTableField('code')]
        fCode: NullableString;

        [MVCTableField('name')]
        fName: NullableString;

        [MVCTableField('description')]
        fDescription: NullableString;

        [MVCTableField('color_code')]
        fColorCode: NullableString;

        [MVCTableField('weight')]
        fWeight: NullableInt32;

    Public
        property ID: Int32 read fID write fID;
        property Code: NullableString read fCode write fCode;
        property Name: NullableString read fName write fName;
        property Description: NullableString read fDescription write fDescription;
        property ColorCode: NullableString read fColorCode write fColorCode;
        property Weight: NullableInt32 read fWeight write fWeight;
    End;

Implementation

End.
