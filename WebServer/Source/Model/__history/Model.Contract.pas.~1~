Unit Model.Contract;

Interface

Uses
  MVCFramework.Nullables,
  MVCFramework.Serializer.Commons,
  MVCFramework.ActiveRecord;

Type
    [MVCNameCase(ncCamelCase)]
    [MVCTable('contracts')]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TContract = Class(TMVCActiveRecord)
    Private
        [MVCTableField('id', [foPrimaryKey, foAutoGenerated])]
        fID: Int32;

        [MVCTableField('contract_number')]
        fContractNumber: NullableString;

        [MVCTableField('customer_id')]
        fCustomerID: NullableInt32;

        [MVCTableField('car_id')]
        fCarID: NullableInt32;

        [MVCTableField('sales_person_id')]
        fSalesPersonID: NullableInt32;

        [MVCTableField('fi_specialist_id')]
        fFiSpecialistID: NullableInt32;

        [MVCTableField('contract_date')]
        fContractDate: NullableString;

        [MVCTableField('total_price')]
        fTotalPrice: NullableCurrency;

        [MVCTableField('discount_amount')]
        fDiscountAmount: NullableCurrency;

        [MVCTableField('down_payment')]
        fDownPayment: NullableCurrency;

        [MVCTableField('financing_bank')]
        fFinancingBank: NullableString;

        [MVCTableField('loan_amount')]
        fLoanAmount: NullableCurrency;

        [MVCTableField('loan_term')]
        fLoanTerm: NullableInt32;

        [MVCTableField('insurance_type')]
        fInsuranceType: NullableString;

        [MVCTableField('insurance_cost')]
        fInsuranceCost: NullableCurrency;

        [MVCTableField('delivery_date')]
        fDeliveryDate: NullableString;

        [MVCTableField('status')]
        fStatus: NullableString;

        [MVCTableField('notes')]
        fNotes: NullableString;

        [MVCTableField('created_at', [foReadOnly])]
        fCreatedAt: NullableString;

        [MVCTableField('updated_at', [foReadOnly])]
        fUpdatedAt: NullableString;

    Published
        property ID: Int32 read fID write fID;
        property ContractNumber: NullableString read fContractNumber write fContractNumber;
        property CustomerID: NullableInt32 read fCustomerID write fCustomerID;
        property CarID: NullableInt32 read fCarID write fCarID;
        property SalesPersonID: NullableInt32 read fSalesPersonID write fSalesPersonID;
        property FiSpecialistID: NullableInt32 read fFiSpecialistID write fFiSpecialistID;
        property ContractDate: NullableString read fContractDate write fContractDate;
        property TotalPrice: NullableCurrency read fTotalPrice write fTotalPrice;
        property DiscountAmount: NullableCurrency read fDiscountAmount write fDiscountAmount;
        property DownPayment: NullableCurrency read fDownPayment write fDownPayment;
        property FinancingBank: NullableString read fFinancingBank write fFinancingBank;
        property LoanAmount: NullableCurrency read fLoanAmount write fLoanAmount;
        property LoanTerm: NullableInt32 read fLoanTerm write fLoanTerm;
        property InsuranceType: NullableString read fInsuranceType write fInsuranceType;
        property InsuranceCost: NullableCurrency read fInsuranceCost write fInsuranceCost;
        property DeliveryDate: NullableString read fDeliveryDate write fDeliveryDate;
        property Status: NullableString read fStatus write fStatus;
        property Notes: NullableString read fNotes write fNotes;
        property CreatedAt: NullableString read fCreatedAt write fCreatedAt;
        property UpdatedAt: NullableString read fUpdatedAt write fUpdatedAt;
    End;

Implementation

End.
