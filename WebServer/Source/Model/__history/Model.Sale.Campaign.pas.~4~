Unit Model.Sale.Campaign;

Interface

Uses
    MVCFramework.ActiveRecord,
    MVCFramework.Nullables,
    System.Generics.Collections;

Type
    [MVCNameCase(ncLowerCase)]
    [MVCTable('Sale_Campaign')]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TSale_Campaign = Class(TMVCActiveRecord)
    Private
        [MVCTableField('CampaignID', [foPrimaryKey, foAutoGenerated])]
        FCampaignID: Int32;

        [MVCTableField('Name')]
        FName: String;

        [MVCTableField('StartDate')]
        FStartDate: NullableDate;

        [MVCTableField('EndDate')]
        FEndDate: NullableDate;

        [MVCTableField('Budget')]
        FBudget: NullableDouble;

        [MVCTableField('IsActive')]
        FIsActive: NullableBoolean;

        [MVCTableField('IsSystemic')]
        FIsSystemic: NullableBoolean;

        [MVCTableField('Description')]
        FDescription: NullableString;

        [MVCTableField('CreatedAt')]
        FCreatedAt: NullableDateTime;

    Public
        Property CampaignID: Int32 Read FCampaignID Write FCampaignID;
        Property Name: String Read FName Write FName;
        Property StartDate: NullableDate Read FStartDate Write FStartDate;
        Property EndDate: NullableDate Read FEndDate Write FEndDate;
        Property Budget: NullableDouble Read FBudget Write FBudget;
        Property IsActive: NullableBoolean Read FIsActive Write FIsActive;
        Property IsSystemic: NullableBoolean Read FIsSystemic Write FIsSystemic;
        Property Description: NullableString Read FDescription Write FDescription;
        Property CreatedAt: NullableDateTime Read FCreatedAt Write FCreatedAt;
    End;

Implementation

End.
