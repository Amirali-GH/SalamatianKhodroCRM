Unit Model.Branch.Inventory;

Interface

Uses
    MVCFramework.Nullables,
    MVCFramework.Serializer.Commons,
    MVCFramework.ActiveRecord;

Type
    [MVCNameCase(ncCamelCase)]
    [MVCTable('branch_inventory')]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TBranchInventory = Class(TMVCActiveRecord)
    private
        [MVCTableField('id', [foPrimaryKey, foAutoGenerated])]
        fID: Int32;

        [MVCTableField('branch_id')]
        fBranchID: NullableInt32;

        [MVCTableField('car_model_id')]
        fCarModelID: NullableInt32;

        [MVCTableField('quantity')]
        fQuantity: NullableInt32;

        [MVCTableField('color')]
        fColor: NullableString;

        [MVCTableField('chassis_number')]
        fChassisNumber: NullableString;

        [MVCTableField('engine_number')]
        fEngineNumber: NullableString;

        [MVCTableField('manufacturing_date')]
        fManufacturingDate: NullableString; // TDate or TDateTime can also be used

        [MVCTableField('arrival_date')]
        fArrivalDate: NullableString; // TDate or TDateTime can also be used

        [MVCTableField('status')]
        fStatus: NullableString; // enum('available','reserved','sold','maintenance')

        [MVCTableField('notes')]
        fNotes: NullableString;

    Public
        property ID: Int32 read fID write fID;
        property BranchID: NullableInt32 read fBranchID write fBranchID;
        property CarModelID: NullableInt32 read fCarModelID write fCarModelID;
        property Quantity: NullableInt32 read fQuantity write fQuantity;
        property Color: NullableString read fColor write fColor;
        property ChassisNumber: NullableString read fChassisNumber write fChassisNumber;
        property EngineNumber: NullableString read fEngineNumber write fEngineNumber;
        property ManufacturingDate: NullableString read fManufacturingDate write fManufacturingDate;
        property ArrivalDate: NullableString read fArrivalDate write fArrivalDate;
        property Status: NullableString read fStatus write fStatus;
        property Notes: NullableString read fNotes write fNotes;
    End;

Implementation

End.
