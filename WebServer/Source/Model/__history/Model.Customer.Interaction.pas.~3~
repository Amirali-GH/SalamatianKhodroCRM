Unit Model.Customer.Interaction;

Interface

Uses
  MVCFramework.Nullables,
  MVCFramework.Serializer.Commons,
  MVCFramework.ActiveRecord;

Type
    [MVCNameCase(ncCamelCase)]
    [MVCTable('customer_interactions')]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TCustomerInteraction = Class(TMVCActiveRecord)
    Private
        [MVCTableField('id', [foPrimaryKey, foAutoGenerated])]
        fID: Int32;

        [MVCTableField('customer_id')]
        fCustomerID: NullableInt32;

        [MVCTableField('user_id')]
        fUserID: NullableInt32;

        [MVCTableField('interaction_type_id')]
        fInteractionTypeID: NullableInt32;

        [MVCTableField('interaction_date')]
        fInteractionDate: NullableString; // TDateTime can also be used

        [MVCTableField('duration')]
        fDuration: NullableInt32;

        [MVCTableField('summary')]
        fSummary: NullableString;

        [MVCTableField('detailed_notes')]
        fDetailedNotes: NullableString;

        [MVCTableField('next_followup_date')]
        fNextFollowupDate: NullableString; // TDateTime can also be used

        [MVCTableField('followup_notes')]
        fFollowupNotes: NullableString;

        [MVCTableField('is_completed')]
        fIsCompleted: NullableBoolean;

        [MVCTableField('created_at', [foReadOnly])]
        fCreatedAt: NullableString;

    Public
        property ID: Int32 read fID write fID;
        property CustomerID: NullableInt32 read fCustomerID write fCustomerID;
        property UserID: NullableInt32 read fUserID write fUserID;
        property InteractionTypeID: NullableInt32 read fInteractionTypeID write fInteractionTypeID;
        property InteractionDate: NullableString read fInteractionDate write fInteractionDate;
        property Duration: NullableInt32 read fDuration write fDuration;
        property Summary: NullableString read fSummary write fSummary;
        property DetailedNotes: NullableString read fDetailedNotes write fDetailedNotes;
        property NextFollowupDate: NullableString read fNextFollowupDate write fNextFollowupDate;
        property FollowupNotes: NullableString read fFollowupNotes write fFollowupNotes;
        property IsCompleted: NullableBoolean read fIsCompleted write fIsCompleted;
        property CreatedAt: NullableString read fCreatedAt write fCreatedAt;
    End;

Implementation

End.
