Unit Model.Campaign;

Interface

Uses
    MVCFramework.Nullables,
    MVCFramework.Serializer.Commons,
    MVCFramework.ActiveRecord;

Type
    [MVCNameCase(ncCamelCase)]
    [MVCTable('campaigns')]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TCampaign = Class(TMVCActiveRecord)
    Private
        [MVCTableField('id', [foPrimaryKey, foAutoGenerated])]
        fID: Int32;

        [MVCTableField('name')]
        fName: NullableString;

        [MVCTableField('description')]
        fDescription: NullableString;

        [MVCTableField('start_date')]
        fStartDate: NullableString; // TDate or TDateTime can also be used

        [MVCTableField('end_date')]
        fEndDate: NullableString; // TDate or TDateTime can also be used

        [MVCTableField('budget')]
        fBudget: NullableCurrency;

        [MVCTableField('is_active')]
        fIsActive: NullableBoolean;

    Public
        property ID: Int32 read fID write fID;
        property Name: NullableString read fName write fName;
        property Description: NullableString read fDescription write fDescription;
        property StartDate: NullableString read fStartDate write fStartDate;
        property EndDate: NullableString read fEndDate write fEndDate;
        property Budget: NullableCurrency read fBudget write fBudget;
        property IsActive: NullableBoolean read fIsActive write fIsActive;
    End;

Implementation

End.
