Unit Model.Branch;

Interface

Uses
    MVCFramework.Nullables,
    MVCFramework.Serializer.Commons,
    MVCFramework.ActiveRecord;

Type
    [MVCNameCase(ncLowerCase)]
    [MVCTable('Branch_Branch')]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TBranch = class(TMVCActiveRecord)
    Private
        [MVCTableField('BranchID', [foPrimaryKey, foAutoGenerated])]
        fBranchID: Integer;

        [MVCTableField('Code')]
        fCode: String;

        [MVCTableField('MainName')]
        fMainName: String;

        [MVCTableField('SecondName')]
        fSecondName: NullableString;

        [MVCTableField('LocationID')]
        fLocationID: NullableInt32;

        [MVCTableField('Phone')]
        fPhone: NullableString;

        [MVCTableField('IsActive')]
        fIsActive: NullableBoolean;

        [MVCTableField('IsSystemic')]
        fIsSystemic: NullableBoolean;

        [MVCTableField('Description')]
        fDescription: NullableString;

        [MVCTableField('CreatedAt', [foReadOnly])]
        fCreatedAt: NullableTDateTime;

    Public
        Property BranchID: Integer read fBranchID write fBranchID;
        Property Code: String read fCode write fCode;
        Property MainName: String read fMainName write fMainName;
        Property SecondName: NullableString read fSecondName write fSecondName;
        Property LocationID: NullableInt32 read fLocationID write fLocationID;
        Property Phone: NullableString read fPhone write fPhone;
        Property IsActive: NullableBoolean read fIsActive write fIsActive;
        Property IsSystemic: NullableBoolean read fIsSystemic write fIsSystemic;
        Property Description: NullableString read fDescription write fDescription;
        Property CreatedAt: NullableTDateTime read fCreatedAt write fCreatedAt;
    End;


    [MVCNameCase(ncLowerCase)]
    TBranchInfo = Class
    Private
        FUserID: Int32;
        FUsername: NullableString;

        FFirstName: NullableString;
        FLastName: NullableString;

        FEmail: NullableString;
        FPhone: NullableString;

        FUserRoleID: NullableInt32;
        FUserRoleName: NullableString;

        FBranchID: NullableInt32;
        FBranchName: NullableString;

        FLastLogin: NullableTDateTime;
        FDescription: NullableString;

    Public
        Property UserID: Int32 read FUserID write FUserID;
        Property UserName: NullableString read fUsername write fUsername;
        Property FirstName: NullableString read FFirstName write FFirstName;
        Property LastName: NullableString read FLastName write FLastName;
        Property Email: NullableString read FEmail write FEmail;
        Property Phone: NullableString read FPhone write FPhone;
        Property UserRoleID: NullableInt32 read FUserRoleID write FUserRoleID;
        Property UserRoleName: NullableString read FUserRoleName write FUserRoleName;
        Property BranchID: NullableInt32 read fBranchID write fBranchID;
        Property BranchName: NullableString read FBranchName write FBranchName;
        Property Description: NullableString read FDescription write FDescription;
        Property LastLogin: NullableTDateTime read FLastLogin write FLastLogin;
    End;

implementation

end.
