Unit Model;

Interface

Uses
  MVCFramework.Nullables,
  MVCFramework.Serializer.Commons,
  MVCFramework.ActiveRecord;

Type
    [MVCNameCase(ncCamelCase)]
    [MVCTable('users')]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TUser = Class(TMVCActiveRecord)
    Private
        [MVCTableField('id', [foPrimaryKey, foAutoGenerated])]
        fID: Int32;

        [MVCTableField('username')]
        fUsername: NullableString;

        [MVCTableField('password_hash')]
        fPasswordHash: NullableString;

        [MVCTableField('first_name')]
        fFirstName: NullableString;

        [MVCTableField('last_name')]
        fLastName: NullableString;

        [MVCTableField('email')]
        fEmail: NullableString;

        [MVCTableField('phone')]
        fPhone: NullableString;

        [MVCTableField('role_id')]
        fRoleID: NullableInt32;

        [MVCTableField('branch_id')]
        fBranchID: NullableInt32;

        [MVCTableField('is_active')]
        fIsActive: NullableBoolean;

        [MVCTableField('last_login', [foReadOnly])]
        fLastLogin: NullableString;

        [MVCTableField('created_at', [foReadOnly])]
        fCreatedAt: NullableString;

        [MVCTableField('updated_at', [foReadOnly])]
        fUpdatedAt: NullableString;

    Published
        property ID: Int32 read fID write fID;
        property Username: NullableString read fUsername write fUsername;

        [MVCDoNotSerialize]
        property PasswordHash: NullableString read fPasswordHash write fPasswordHash;
        property FirstName: NullableString read fFirstName write fFirstName;
        property LastName: NullableString read fLastName write fLastName;
        property Email: NullableString read fEmail write fEmail;
        property Phone: NullableString read fPhone write fPhone;
        property RoleID: NullableInt32 read fRoleID write fRoleID;
        property BranchID: NullableInt32 read fBranchID write fBranchID;
        property IsActive: NullableBoolean read fIsActive write fIsActive;
        property LastLogin: NullableString read fLastLogin write fLastLogin;
        property CreatedAt: NullableString read fCreatedAt write fCreatedAt;
        property UpdatedAt: NullableString read fUpdatedAt write fUpdatedAt;
    End;

Implementation

End.
