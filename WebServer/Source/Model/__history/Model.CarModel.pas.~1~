Unit Model.CarModel;

Interface

Uses
    MVCFramework.Nullables,
    MVCFramework.Serializer.Commons,
    MVCFramework.ActiveRecord;

Type
    [MVCNameCase(ncCamelCase)]
    [MVCTable('car_models')]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TCarModel = Class(TMVCActiveRecord)
    private
        [MVCTableField('id', [foPrimaryKey, foAutoGenerated])]
        fID: Int32;

        [MVCTableField('name')]
        fName: NullableString;

        [MVCTableField('brand')]
        fBrand: NullableString;

        [MVCTableField('category')]
        fCategory: NullableString;

        [MVCTableField('year')]
        fYear: NullableInt32;

        [MVCTableField('is_active')]
        fIsActive: NullableBoolean;

    Published
        property ID: Int32 read fID write fID;
        property Name: NullableString read fName write fName;
        property Brand: NullableString read fBrand write fBrand;
        property Category: NullableString read fCategory write fCategory;
        property Year: NullableInt32 read fYear write fYear;
        property IsActive: NullableBoolean read fIsActive write fIsActive;
    End;

Implementation

End.
