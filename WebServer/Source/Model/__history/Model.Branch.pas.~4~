// Unit: Model.Branch.pas

Unit Model.Branch;

Interface

Uses
  MVCFramework.Nullables,
  MVCFramework.Serializer.Commons,
  MVCFramework.ActiveRecord;

Type
    [MVCNameCase(ncCamelCase)]
    [MVCTable('branches')]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TBranch = Class(TMVCActiveRecord)
    Private
        [MVCTableField('id', [foPrimaryKey, foAutoGenerated])]
        fID: Int32;

        [MVCTableField('name')]
        fName: NullableString;

        [MVCTableField('city')]
        fCity: NullableString;

        [MVCTableField('address')]
        fAddress: NullableString;

        [MVCTableField('phone')]
        fPhone: NullableString;

        [MVCTableField('manager_id')]
        fManagerID: NullableInt32;

        [MVCTableField('is_active')]
        fIsActive: NullableBoolean;

        [MVCTableField('created_at', [foReadOnly])]
        fCreatedAt: NullableString;

    Public
        property ID: Int32 read fID write fID;
        property Name: NullableString read fName write fName;
        property City: NullableString read fCity write fCity;
        property Address: NullableString read fAddress write fAddress;
        property Phone: NullableString read fPhone write fPhone;
        property ManagerID: NullableInt32 read fManagerID write fManagerID;
        property IsActive: NullableBoolean read fIsActive write fIsActive;
        property CreatedAt: NullableString read fCreatedAt write fCreatedAt;
    End;

Implementation

End.
