Unit Model.UserRole;

Interface

Uses
    MVCFramework.Nullables,
    MVCFramework.Serializer.Commons,
    MVCFramework.ActiveRecord;

Type
    [MVCTable('User_UserRole')]
    [MVCNameCase(ncLowerCase)]
    [MVCEntityActions([eaRetrieve, eaCreate, eaUpdate, eaDelete])]
    TUserRole = Class(TMVCActiveRecord)
    Private
        [MVCTableField('UserRoleID', [foPrimaryKey, foAutoGenerated])]
        FUserRoleID: Int32;

        [MVCTableField('MainName')]
        FMainName: NullableString;

        [MVCTableField('SecondName')]
        FMainName: NullableString;

        [MVCTableField('description')]
        fDescription: NullableString;

        [MVCTableField('created_at', [foReadOnly])]
        fCreatedAt: NullableString;

    Public
        property ID: Int32 read fID write fID;
        property Name: NullableString read fName write fName;
        property Description: NullableString read fDescription write fDescription;
        property CreatedAt: NullableString read fCreatedAt write fCreatedAt;
    End;

Implementation

End.
