unit Model.Branch;

interface

uses
  MVCFramework.ActiveRecord, MVCFramework.Serializer.Commons, MVCFramework.Nullables;

type
  [MVCNameCase(ncCamelCase)]
  [MVCTable('branches')]
  TBranch = class(TMVCActiveRecord)
  private
    [MVCTableField('id', [foPrimaryKey, foAutoGenerated])]
    fID: Int32;

    [MVCTableField('name')]
    fName: string;

    [MVCTableField('city')]
    fCity: NullableString;

    [MVCTableField('address')]
    fAddress: NullableString;
  public
    property ID: Int32 read fID write fID;
    property Name: string read fName write fName;
    property City: NullableString read fCity write fCity;
    property Address: NullableString read fAddress write fAddress;
  end;

implementation

end.

